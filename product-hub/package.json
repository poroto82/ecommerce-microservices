{
  "name": "product-hub",
  "version": "1.0.2",
  "scripts": {
    "start": "yarn run build && yarn run serve:local",
    "debug": "yarn run serve:debug",
    "build": "yarn run clean && yarn run compile",
    "compile": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "coverage": "jest --coverage",
    "serve:production": "node ./dist/app.js",
    "serve:local": "NODE_ENV=development npx nodemon -L --watch './**/*.ts' --exec 'ts-node' -r dotenv/config src/app.ts",
    "serve:debug": "NODE_ENV=development npx nodemon -L --watch './**/*.ts' --exec node --inspect=9222 -r ts-node/register -r dotenv/config src/app.ts",
    "lint": "eslint --ext .ts src/**/*.ts",
    "format": "eslint --ext .ts --fix src/**/*.ts & tsc --pretty & prettier --write 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/luxon": "^2.3.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.1",
    "@types/pino-http": "^5.8.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.3.0",
    "tsc": "^2.0.4",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/amqplib": "^0.10.5",
    "ampq": "^2019.5.11",
    "amqplib": "^0.10.3",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.1",
    "express": "^4.17.1",
    "http-status": "^1.5.1",
    "jest-junit": "^13.2.0",
    "lodash": "^4.17.21",
    "luxon": "^2.3.2",
    "mysql2": "^2.3.3",
    "newrelic": "^8.10.0",
    "pino": "^7.11.0",
    "pino-http": "^7.0.0",
    "pino-pretty": "^7.6.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.19.0",
    "sequelize-typescript": "^2.1.3",
    "sqlite3": "^5.0.6",
    "supertest": "^6.2.3"
  },
  "engines": {
    "node": ">=16"
  }
}
